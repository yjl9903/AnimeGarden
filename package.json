{
  "name": "@animegarden/monorepo",
  "version": "0.5.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:cli": "turbo run build --filter @animegarden/cli...",
    "build:server": "turbo run build --filter @animegarden/server...",
    "build:web": "turbo run build --filter @animegarden/web...",
    "build:worker": "turbo run build --filter @animegarden/worker...",
    "dev": "turbo run dev --parallel",
    "dev:cron": "tsx apps/server/src/cli.ts cron",
    "dev:server": "tsx apps/server/src/cli.ts start --port=8080",
    "dev:web": "pnpm -C apps/web dev",
    "dev:worker": "pnpm -C apps/worker dev",
    "format": "turbo run format --parallel",
    "manager": "tsx apps/server/src/cli.ts",
    "release": "bumpp package.json packages/*/package.json apps/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "start:cron": "node apps/server/cli.mjs cron",
    "start:server": "node apps/server/cli.mjs start",
    "start:web": "node apps/web/server.mjs",
    "test:ci": "turbo run test:ci",
    "typecheck": "turbo run typecheck",
    "preversion": "turbo run test:ci",
    "postversion": "turbo run build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20260131.0",
    "@flydotio/dockerfile": "0.7.10",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.12",
    "@vite-pwa/assets-generator": "1.0.2",
    "bumpp": "latest",
    "drizzle-kit": "0.31.8",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "turbo": "2.6.0",
    "typescript": "5.9.3",
    "unbuild": "3.6.1",
    "vitest": "3.2.4",
    "wrangler": "4.61.1"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=v18.16.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "core-js-pure",
      "esbuild",
      "fs-native-extensions",
      "node-datachannel",
      "sharp",
      "tree-sitter",
      "tree-sitter-json",
      "tree-sitter-yaml",
      "utf-8-validate",
      "utp-native",
      "workerd"
    ]
  }
}
